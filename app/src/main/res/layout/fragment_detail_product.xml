<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProductFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E5E5">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/card5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailtitle"
            android:layout_width="370dp"
            android:layout_height="109dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="Kommen sie bei uns vorbei und wir beraten Sie gerne und kompetent"
            android:textColor="#131313"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/detailsubtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="- Vollsynthetisch"
            android:textColor="#070707"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/detailtitle"
            app:layout_constraintTop_toBottomOf="@+id/detailtitle" />

        <TextView
            android:id="@+id/detailsubtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="- Halbsynthetisch"
            android:textColor="#100E0E"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/detailsubtext1"
            app:layout_constraintTop_toBottomOf="@+id/detailsubtext1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>